{
  "name": "Appointment",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "description": "ID of the patient"
    },
    "practitioner_id": {
      "type": "string",
      "description": "ID of the practitioner"
    },
    "therapy_type": {
      "type": "string",
      "enum": [
        "Abhyanga",
        "Shirodhara",
        "Udvartana",
        "Nasya",
        "Basti",
        "Virechana",
        "Vamana",
        "Raktamokshana",
        "Kizhi",
        "Akshi Tarpana",
        "Consultation",
        "Follow-up"
      ],
      "description": "Type of therapy/treatment"
    },
    "appointment_date": {
      "type": "string",
      "format": "date",
      "description": "Date of appointment"
    },
    "appointment_time": {
      "type": "string",
      "description": "Time of appointment"
    },
    "duration_minutes": {
      "type": "number",
      "default": 60,
      "description": "Duration in minutes"
    },
    "status": {
      "type": "string",
      "enum": [
        "Scheduled",
        "In Progress",
        "Completed",
        "Cancelled",
        "No Show"
      ],
      "default": "Scheduled",
      "description": "Appointment status"
    },
    "notes": {
      "type": "string",
      "description": "Appointment notes"
    },
    "treatment_plan_id": {
      "type": "string",
      "description": "Associated treatment plan ID"
    },
    "session_number": {
      "type": "number",
      "description": "Session number in treatment plan"
    },
    "fees": {
      "type": "number",
      "description": "Session fees"
    },
    "payment_status": {
      "type": "string",
      "enum": [
        "Pending",
        "Paid",
        "Partially Paid"
      ],
      "default": "Pending",
      "description": "Payment status"
    }
  },
  "required": [
    "patient_id",
    "practitioner_id",
    "appointment_date",
    "appointment_time",
    "therapy_type"
  ]
}