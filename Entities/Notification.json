{
  "name": "Notification",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the notification"
    },
    "message": {
      "type": "string",
      "description": "The main content of the notification"
    },
    "channels": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Email",
          "SMS",
          "WhatsApp"
        ]
      },
      "description": "Channels through which the notification was sent"
    },
    "status": {
      "type": "string",
      "enum": [
        "Sent",
        "Failed",
        "Draft"
      ],
      "default": "Draft"
    },
    "sent_to_count": {
      "type": "number",
      "description": "Number of users the notification was sent to"
    },
    "sent_date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "title",
    "message"
  ]
}